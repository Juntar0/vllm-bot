{
  "vllm": {
    "base_url": "http://localhost:8000/v1",
    "model": "gpt-oss-medium",
    "temperature": 0.0,
    "max_tokens": 2048,
    "enable_function_calling": true
  },
  "workspace": {
    "dir": "/"
  },
  "security": {
    "exec_enabled": true,
    "allowed_commands": ["ls", "cat", "grep", "find", "wc", "head", "tail", "echo"],
    "timeout_sec": 30,
    "max_output_size": 200000
  },
  "memory": {
    "path": "./data/memory.json",
    "auto_backup": true
  },
  "audit": {
    "enabled": true,
    "log_path": "./data/runlog.jsonl"
  },
  "agent": {
    "max_loops": 5,
    "loop_wait_sec": 0.5
  }
}
